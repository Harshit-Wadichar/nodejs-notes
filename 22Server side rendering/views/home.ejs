<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        }
        th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
        }
         th {
        background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>URL SHORTENER</h1>
   <div>
    <form action="/url" method="POST">
        <label for="">Enter original URL</label>
        <input type="text" name="url" id="url" placeholder="https://www.example.com">
        <button type="submit">Generate</button>
    </form>
    <% if(locals.id) { %>
        <p>Generated url is "http://localhost:8001/url/<%= id %>"</p>
        <p>visit it here <a href="http://localhost:8001/url/<%= id %>">http://localhost:8001/url/<%= id %></a></p>
    <% } %>

   </div>
   <div>
    <% if(locals.urls) { %>
       <table>
        <thead>
            <tr>
                <th>SR no.</th>
                <th>Short id</th>
                <th>Redirect Url</th>
                <th>No of Clicks</th>
            </tr>
        </thead>
            <tbody>
                <% urls.forEach((url, index) => {%>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectUrl %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <% }) %>
            </tbody>
       </table>
    <% } %>
   </div>
</body>
</html>