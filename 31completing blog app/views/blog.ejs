<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img
        src="<%= blog.coverImageURL %>"
        alt="<%= blog.coverImageURL %>"
        width="800px"
      />
      <pre class="mt-4"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImage %>" width="50px" alt="" />
      <%= blog.createdBy.fullName %>
    </div>
    
    <% if(locals.user){ %>
    <div class="container mt-3">
      <form action="/blog/comment/<%= blog._id%>" method="post">
        
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            id="content"
            aria-describedby="emailHelp"
            name="content"
            placeholder="Enter your comment"
          />
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
      </form>
    </div>
    <% } %>

    <div class="mt-3">
      <h1 style="margin-left: 100px;">Comments(<%= comments.length%>)</h1>
      <% comments.forEach(comment => { %>
       
        <div class="container mt-2">
          <img src="<%= comment.createdBy.profileImage %>" width="30px" alt="" />
          <%= comment.createdBy.fullName %>: <pre> <%= comment.content%> </pre>
        </div>

      <% }) %>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
